<!DOCTYPE html>
<html>
  <head>
    <title>Rastreamento</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if @tracker %>
      <%= javascript_include_tag 'tracker'%>
    <% end %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand">Tracking App</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link active"><%= link_to "Home", root_path, data: { turbolinks: false } %></a>
          <a class="nav-item nav-link active"><%= link_to "About Us", about_us_url, data: { turbolinks: false } %></a>
          <a class="nav-item nav-link"><%= link_to "Contacts", new_contact_path, data: { turbolinks: false }  %></a>
          <a class="nav-item nav-link"><%= link_to "Trackings", trackings_url, data: { turbolinks: false }  %></a>
        </div>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
